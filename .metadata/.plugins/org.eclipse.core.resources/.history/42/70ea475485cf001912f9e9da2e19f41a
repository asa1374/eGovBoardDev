<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userBoardMapper">

	<!-- 페이징 Start -->
	<sql id="pagingStr">
		<if test="cntPerPage != null and cntPerPage != ''">
		<![CDATA[
			SELECT Z.* FROM (
			SELECT (ROW_NUMBER() OVER()) RNUM, X.* FROM (
		]]>
		</if>
	</sql>

	<!-- 페이징 End -->
	<sql id="pagingEnd">
		<if test="cntPerPage != null and cntPerPage != ''">
		<![CDATA[
			) X
		) Z
		]]>
		<choose>
	        <when test="notice == '1'">
	            <![CDATA[
	                LIMIT 5 OFFSET #{startRow}
	            ]]>
	        </when>
	 
	        <otherwise>
	            <![CDATA[
	                LIMIT 10 OFFSET #{startRow}
	            ]]>
	        </otherwise>
    	</choose>
		</if>
	</sql>

	<insert id="insertBoard" parameterType="hMap">
		INSERT INTO BOARD_DATA (
			board_seq
			,board_title
			,user_id
			,board_date
			,board_content
			,user_auth
			,file_name
			,file_size
			) 
		VALUES (
			NEXTVAL('board_seq')
			,#{title}
			,#{userId}
			,NOW()
			,#{content}
			,#{auth}
			,#{fileName}
			,#{fileSize}
			)
	</insert>

	<select id="selectBoardList" parameterType="hMap" resultType="egovMap">
		<if test="notice != '1'">
		<include refid="pagingStr" />
		</if>
		SELECT  board_seq
				,board_title
				,user_id
				,board_date
		FROM 	BOARD_DATA
		<choose>
	        <when test="notice != null and notice != ''">
	                WHERE   user_auth = 'A'
	        </when>
	        <otherwise>
	                WHERE   user_auth = 'U'
	        </otherwise>
    	</choose>
		ORDER BY board_seq desc
		<if test="notice != '1'">
		<include refid="pagingEnd" />
		</if>
	</select>
	
	<select id="selectBoardNoticeList" resultType="egovMap">
		SELECT  board_seq
				,board_title
				,user_id
				,board_date
		FROM 	BOARD_DATA
		WHERE   user_auth = 'A'
		ORDER BY board_seq desc
	</select>
	
	<select id="selectBoardOne" parameterType="hMap" resultType="egovMap">
		SELECT  board_seq
				, board_title
				, board_content
				, user_id
				, file_name
				, file_size
		FROM 	BOARD_DATA
		WHERE 	board_seq = #{seq}
	</select>
	
	<select id="totalcount" resultType="int">
		SELECT COUNT(*)
		FROM BOARD_DATA
	</select>
	
	<update id="updateBoardData" parameterType="hMap">
		UPDATE 	BOARD_DATA
		   SET 	board_title = #{title}
				, board_content = #{content}
				, board_date = NOW()
				, file_name = #{fileName}
				, file_size = #{fileSize}
		 WHERE 	board_seq = #{seq}
	</update>
	
	<delete id="deleteBoard" parameterType="hMap">
		DELETE 
		FROM BOARD_DATA 
		WHERE board_seq = #{seq}
	</delete>
	

</mapper>